@model Tuple<List<Reservation>, List<Provoli>>

@{
    ViewData["Title"] = "History";
}

<head>
    <link rel="stylesheet" href="~/css/reservations.css" asp-append-version="true" />
</head>

<table class="history-table">
    <tr>
        <th>Movie Name</th>
        <th>Date & Time</th>
        <th>Seats</th>
        <th>Number of Seats</th>
    </tr>
    @foreach (var item in Model.Item1.OrderBy(r => r.Provoli.ShowDateTime))
    {
        <tr>
            <td>@item.ProvolesMoviesName</td>
            <td>@item.Provoli.ShowDateTime</td>
            <td>@item.Seats</td>
            <td>@item.NumberOfSeats</td>
        </tr>
    }
</table>