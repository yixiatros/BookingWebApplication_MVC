<!-- Login.cshtml -->
@model BookingWebApplication.Models.User

<head>
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
</head>

<div class="login-title">
    <h2>Log In</h2>
</div>
<div class="login-alert">
    @if (ViewBag.Error != null)
    {
        <div style="color: red;">@ViewBag.Error</div>
    }
</div>

<div class="login-box">
    <form asp-action="Login" method="post">

        <label for="Username">Username</label>
        <input class="login-control form-control" type="text" name="Username" required />

        <label for="Password">Password</label>
        <input class="login-control form-control" type="password" name="Password" required />

        <div class="login-buttons-links">
            <button class="login-button btn btn-secondary" type="submit">Login</button>
            <a class="register-link" asp-action="Register">Register</a>
        </div>
    </form>
</div>
