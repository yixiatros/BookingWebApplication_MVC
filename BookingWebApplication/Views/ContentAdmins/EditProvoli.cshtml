@model BookingWebApplication.Models.Provoli

@{
    ViewData["Title"] = "EditProvoli";
}

<h2>Edit Screening Schedule</h2>

<form asp-action="EditProvoli" asp-controller="ContentAdmin" method="post">
    @Html.AntiForgeryToken()

    <input asp-for="MoviesId" type="hidden" />
    <input asp-for="MoviesName" type="hidden" />
    <input asp-for="CinemasID" type="hidden" />
    <input asp-for="ShowDateTime" type="hidden" />
    <input asp-for="ContentAdminId" type="hidden" />

    <div class="form-group">
        <label asp-for="MoviesName">Movie Name:</label>
        <input asp-for="MoviesName" class="form-control" />
        <span asp-validation-for="MoviesName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ShowDateTime">Date & Time:</label>
        <input asp-for="ShowDateTime" class="form-control" />
        <span asp-validation-for="ShowDateTime" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CinemasID">Cinema ID:</label>
        <input asp-for="CinemasID" class="form-control" />
        <span asp-validation-for="CinemasID" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Save Changes" class="btn btn-primary" />
    </div>
</form>
